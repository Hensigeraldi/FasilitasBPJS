generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
}

model Asset {
  id            Int      @id @default(autoincrement())
  nama          String   @db.VarChar(255)
  kode_aset     String   @unique @db.VarChar(100)
  kategori      String   @db.VarChar(100)
  lokasi_lantai Int
  kondisi       String   @db.VarChar(50)
  status        String   @db.VarChar(50)
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt

  logs ActivityLog[]

  @@index([lokasi_lantai])
  @@index([kode_aset])
  @@map("assets")
}

model ActivityLog {
  id             Int      @id @default(autoincrement())
  asset_id       Int
  action         LogAction
  lantai_asal    Int?
  lantai_tujuan  Int?
  deskripsi      String?  @db.Text
  timestamp      DateTime @default(now())

  asset Asset @relation(fields: [asset_id], references: [id], onDelete: Cascade)

  @@index([asset_id])
  @@index([action])
  @@map("activity_logs")
}

enum LogAction {
  CREATE
  UPDATE
  MOVE
  DELETE
}
